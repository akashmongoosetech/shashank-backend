# Environment Variables for Doctor Derma Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/doctor-derma-clinic
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/doctor-derma-clinic

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Clinic Information
CLINIC_NAME=Doctor Derma Clinic
CLINIC_EMAIL=info@doctorderma.com
CLINIC_PHONE=+1 (555) 123-4567
CLINIC_ADDRESS=123 Medical Plaza, Health District, City 12345

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Secret (for admin authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
